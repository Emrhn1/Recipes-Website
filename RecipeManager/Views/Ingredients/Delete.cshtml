@model RecipeManager.Models.Ingredient

@{
    ViewData["Title"] = "Delete Ingredient";
}

<div class="container">
    <h1>Delete Ingredient</h1>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this ingredient?</h4>
        <p>This will also remove this ingredient from all recipes that use it.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div> 