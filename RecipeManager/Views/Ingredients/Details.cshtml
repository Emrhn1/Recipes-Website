@model RecipeManager.Models.Ingredient

@{
    ViewData["Title"] = "Ingredient Details";
}

<div class="container">
    <h1>@Model.Name</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Description</h5>
            <p class="card-text">@Model.Description</p>
        </div>
    </div>

    <h2>Recipes using this Ingredient</h2>
    <div class="row">
        @foreach (var recipeIngredient in Model.RecipeIngredients)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@recipeIngredient.Recipe.Title</h5>
                        <p class="card-text">Amount: @recipeIngredient.Amount @recipeIngredient.Unit</p>
                        <a asp-controller="Recipes" asp-action="Details" asp-route-id="@recipeIngredient.RecipeId" class="btn btn-primary">View Recipe</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div> 